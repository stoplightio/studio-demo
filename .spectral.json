{
  "formats": [
    "oas2",
    "oas3",
    "json-schema"
  ],
  "extends": [
    "spectral:oas"
  ],
  "rules": {
    "info-matches-stoplight": {
      "description": "This is an example rule",
      "message": "Info must contain Stoplight",
      "given": "$.info",
      "recommended": true,
      "type": "style",
      "then": {
        "field": "title",
        "function": "pattern",
        "functionOptions": {
          "match": "Stoplight"
        }
      },
      "severity": "warn"
    },
    "info-description": "info",
    "info-contact": "info",
    "oas2-anyOf": "error",
    "oas2-oneOf": "error",
    "operation-description": "info"
  }
}